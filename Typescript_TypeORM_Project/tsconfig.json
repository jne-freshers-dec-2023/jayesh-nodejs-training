{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2015"],
    "target": "es2015",
    "outDir": "./dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["lib/**/*.ts", "src/**/*.ts", "myRequest.d.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["../node_modules/@types/index.d.ts"]
}
